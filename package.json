    "@types/jsdom": "^12.2.3",
    "@types/mocha": "^5.2.6",
    "@types/react": "^16.8.10",
    "@types/react-addons-test-utils": "^0.14.24",
    "@types/react-dom": "^16.8.3",
    "@types/react-router-dom": "^4.3.1",
    "@types/sinon": "7.0.10",
    "aspnet-webpack": "^3.0.0",
    "aspnet-webpack-react": "^4.0.0",
    "bootstrap": "4.3.1",
    "chai": "^4.2.0",
    "concurrently": "^5.0.1",
    "cross-env": "^5.2.0",
    "css-loader": "^2.1.1",
