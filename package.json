{
  "name": "vipper",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "postinstall": "dotnet restore ./api && dotnet restore ./api.test",
    "build": "dotnet build ./api",
    "test:api": "dotnet test ./api.test",
    "pretest:react": "webpack --config ./client-react.test/webpack.config.js",
    "test:react": "mocha ./client-react.test/build/tests.js",
    "test": "npm run test:api && npm run test:react",
    "prestart": "docker-compose up -d",
    "start": "cd ./api && cross-env NODE_PATH=../node_modules/ ASPNETCORE_ENVIRONMENT=Development dotnet watch run",
    "start:release": "npm run prerelease && cd ./api/bin/Release/netcoreapp1.0/publish/ && dotnet api.dll",
    "provision:prod": "ansible-playbook -l production -i ./ops/hosts ./ops/provision.yml",
    "prerelease": "cross-env ASPNETCORE_ENVIRONMENT=Production webpack --config ./client-react/webpack.config.js && cd ./api && dotnet publish --configuration Release",
    "deploy:prod": "npm run prerelease && ansible-playbook -l production -i ./ops/hosts ./ops/deploy.yml",
    "ssh:prod": "ssh `grep 'deploy_user=' ./ops/hosts | tail -n1 | awk -F'=' '{ print $2}'`@`awk 'f{print;f=0} /[production]/{f=1}' ./ops/hosts | head -n 1`"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {},
  "devDependencies": {
    "@types/chai": "^3.4.32",
    "@types/enzyme": "^2.4.33",
    "@types/jsdom": "^2.0.29",
    "@types/mocha": "^2.2.31",
    "@types/react": "^0.14.34",
    "@types/react-addons-test-utils": "^0.14.14",
    "@types/react-dom": "^0.14.16",
    "@types/react-router": "^2.0.33",
    "aspnet-webpack": "^1.0.11",
    "aspnet-webpack-react": "^1.0.2",
    "awesome-typescript-loader": "^2.2.4",
    "chai": "^3.5.0",
    "cross-env": "^3.1.3",
    "css-loader": "^0.25.0",
    "enzyme": "^2.4.1",
    "extendify": "^1.0.0",
    "extract-text-webpack-plugin": "^1.0.1",
    "html-webpack-plugin": "^2.22.0",
    "jsdom": "^9.5.0",
    "mocha": "^3.0.2",
    "react": "^15.3.1",
    "react-addons-test-utils": "^15.3.1",
    "react-dom": "^15.3.1",
    "react-hot-loader": "1.3.0",
    "react-router": "^2.8.1",
    "source-map-loader": "^0.1.5",
    "style-loader": "^0.13.1",
    "stylus": "^0.54.5",
    "stylus-loader": "^2.3.1",
    "typescript": "^2.0.2",
    "webpack": "^1.13.2",
    "webpack-hot-middleware": "^2.12.2"
  }
}
